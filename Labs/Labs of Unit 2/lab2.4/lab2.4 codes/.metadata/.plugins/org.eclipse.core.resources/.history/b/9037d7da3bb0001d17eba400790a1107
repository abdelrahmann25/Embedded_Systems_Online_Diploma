#include <stdio.h>

int main(void) {
	char name[]={"Ahmed Osama"};
	char namelwr[20];
	int i;
	printf("%s\n", name);
	for( i=0 ; i<sizeof(name) ; i++)
	{
		if (name[i]>='A' && name[i]<='Z')
			namelwr[i]=name[i]+32;
	}
	printf("%s", namelwr);
	return 0;
}
