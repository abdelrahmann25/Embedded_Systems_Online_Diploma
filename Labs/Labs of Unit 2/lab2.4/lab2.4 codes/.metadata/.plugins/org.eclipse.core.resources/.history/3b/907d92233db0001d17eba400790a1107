#include <stdio.h>

int main(void) {
	char name[]={"Ahmed Osama"};
	char namelwr[100];
	int i;
	printf("%s\n", name);
	printf("%s\n", namelwr);
	for( i=0 ; name[i]!='\0' ; i++)
	{
		if (name[i]>='A' && name[i]<='Z')
			{namelwr[i]=name[i]+32;}
	}
	printf("%s\n", namelwr);
	return 0;
}
