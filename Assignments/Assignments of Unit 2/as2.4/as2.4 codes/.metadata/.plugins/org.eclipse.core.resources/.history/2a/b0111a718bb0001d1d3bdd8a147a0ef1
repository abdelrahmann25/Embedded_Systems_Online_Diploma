#include <stdio.h>
#include <string.h>
int main(void) {
	char text[100];
	char chara;
	int i, freq;

	printf("Enter Your string: ");
	gets(text);
	printf("\nEnter character to be searched for: ");
	getchar(chara);
	for(i=0;i<strlen(text);i++)
	{
		if (text[i]==chara)
			freq++;

	}
	printf("\nFrequency of %c = %d",chara,freq);
	return 0;
}
