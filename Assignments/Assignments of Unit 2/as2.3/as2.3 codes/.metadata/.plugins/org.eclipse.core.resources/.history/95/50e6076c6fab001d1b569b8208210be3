#include <stdio.h>


int main(void) {
	while(1)
	{
		char alpha;

	printf("Enter a character: ");
		fflush(stdin); fflush(stdout);
		scanf("%c",&alpha );
		if(isalpha(alpha))
			printf("%c is an alphabet/n",alpha);
		else if (!isalpha(alpha))
			printf("%c is not an alphabet/n", alpha);


	}
	return 0;
}
