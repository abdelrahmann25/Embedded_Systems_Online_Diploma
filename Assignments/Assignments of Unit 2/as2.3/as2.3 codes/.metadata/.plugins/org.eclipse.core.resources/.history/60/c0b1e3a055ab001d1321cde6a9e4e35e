#include <stdio.h>

int main(void) {
	int a,b;
	printf("Enter value of a: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",a);
	printf("Enter value of b: ");
	scanf("%d",b);

	printf("value of a after swamping is: %d",b);
	printf("value of b after swamping is: %d",a);


	return 0;
}
