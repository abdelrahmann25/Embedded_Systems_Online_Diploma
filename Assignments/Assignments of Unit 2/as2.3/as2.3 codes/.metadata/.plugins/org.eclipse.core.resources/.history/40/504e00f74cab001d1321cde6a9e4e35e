#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int num = 0;

	printf("Enter your number: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&num);
	printf("\nYour number = %d" ,num);
	return EXIT_SUCCESS;
}
